.checkbox
    &__input
        vertical-align middle
        width 14px
        height 14px
        margin 0 3px 0 0
        outline 0

        &:checked
            & + label
                &:after
                    opacity 1
                    background-color #585c67 + 60%

                &:before
                    border 1px solid #585c67 + 60%

        &:not(checked)
            position absolute
            opacity 0

            & + label
                position relative
                padding 2px 0 0 25px

                &:before
                    content ''
                    position absolute
                    top 1px
                    left 0
                    width 16px
                    height 16px
                    border 1px solid #777
                    border-radius 50%

                &:after
                    content ''
                    position absolute
                    top 4px
                    left 3px
                    width 12px
                    height 12px
                    border-radius 50%
                    opacity 0
                    transition all .2s

    &__label
        cursor pointer
